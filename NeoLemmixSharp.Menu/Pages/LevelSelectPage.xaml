<Window xmlns="clr-namespace:MGUI.Core.UI.XAML;assembly=MGUI.Core"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:ui="clr-namespace:MGUI.Core.UI;assembly=MGUI.Core"
        SizeToContent="WidthAndHeight">
    <DockPanel>
		<ListBox Dock="Left">
            <ListBox.ItemTemplate>
                <ContentTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="{MGBinding ThingWidth}"
                                BorderBrush="rgb(255,255,255)" />
                        <TextBlock Text="{MGBinding ThingName}" />
                    </StackPanel>
                </ContentTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
	</DockPanel>
</Window>